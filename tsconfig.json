{
  "compilerOptions": {                        
    "target": "es2017",                               
    "module": "ESNext",                           
    "outDir": "./dist",                             
    "rootDir": "./",                             
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true, 
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist",
    "jsx" : "react-jsx",   
    "skipLibCheck": true,
    "paths": {
	"react": [ "./node_modules/@types/react" ]
    }, 
  },
  "exclude":[
    "./node_modules"
  ]
}
