{
    "compilerOptions": {
	"module": "esnext", // Use ES module resolution
	"target": "es2020", // Target modern JavaScript
	"moduleResolution": "node", // Resolve modules like Node.js
	"esModuleInterop": true, // Allow interop with CommonJS modules
	"allowSyntheticDefaultImports": true, // Allow synthetic imports
	"skipLibCheck": true, // Skip type checks for libraries	
	"outDir": "lib",
	"sourceMap": true,
	"strict": true,
	"target": "es2017"
    },
    "compileOnSave": true,
    "include": [
	"src"
    ]
}
