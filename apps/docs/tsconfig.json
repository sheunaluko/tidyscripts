{
  "compilerOptions": {                        
    "target": "es2017",                               
    "module": "ESNext",                           
    "outDir": "./dist",                             
    "rootDir": "../../",                             
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true, 
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist",    
  },
  "exclude":[
    "./node_modules"
  ],
  "files" : [
    "../../packages/ts_common/src/index.ts" ,
    "../../packages/ts_node/src/index.ts" ,
    "./docs.ts" ,    
  ],
  "typedocOptions": {
        "entryPoints": ["./docs.ts"],
        "out": "../ts_next_app/public/resources/docs",
	"name" : "Tidyscripts Docs" ,
	"exclude" : "**/node_modules/**" , 
    }
}

 
