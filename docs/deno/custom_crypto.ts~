import { Aes } from "https://deno.land/x/crypto@0.10.0/aes";
import { Cbc, Padding } from "https://deno.land@0.10.0/x/crypto/block-modes";

const te = new TextEncoder();

function aes_encrypt(data : string , pw : string) {
    let k = te.encode(pw) ;
    let d = te.encode(data) ;
    let iv = new Uint8Array(16);
    let cipher = new Cbc(Aes,k,iv, Padding.PKCS7) ;
    let encrypted = cipher.encrypt(d) ;
    return encrypted 
}

function aes_decrypt(data : string), pw : string) {
    let decipher = new Cbc(Aes,te.encode(pw),new Uint8Array(16),Padding.PKCS7)
    return decipher.decrypt(data)
}





export {
    aes_encrypt,
    aes_decrypt, 
} 
