
{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "outDir" : "lib" , 
    "jsx" : "react" , 
    "skipLibCheck": true,
    "sourceMap" : true, 
    "declaration": true, 
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",      
  },
  "include": [
      "src", 
  ],
    
}
